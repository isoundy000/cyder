{
  "compilerOptions": {
    "outDir": "resource/",
    "target": "ES5",
    "lib": [
      "ES5",
      "ES2015.Collection"
    ],
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "skipDefaultLibCheck": true,
    "stripInternal": true,
    "declaration": false,
    "accessorOptimization": true,
    "emitReflection": false,
    "reorderFiles": true
  },
  "modules": [
    {
      "name": "cyder",
      "include": [
        "scripts/src/**/*"
      ]
    },
    {
      "name": "test",
      "include": [
        "scripts/test/**/*"
      ],
      "dependencies": [
        "cyder"
      ]
    }
  ]
}
