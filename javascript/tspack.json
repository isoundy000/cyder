{
  "compilerOptions": {
    "outDir": "built/",
    "target": "ES5",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "skipDefaultLibCheck": true,
    "stripInternal": true,
    "declaration": false,
    "accessorOptimization": true,
    "emitReflection": true,
    "reorderFiles": true
  },
  "modules": [
    {
      "name": "main",
      "include": [
        "src/**/*"
      ]
    },
    {
      "name": "test",
      "include": [
        "test/**/*"
      ],
      "dependencies": [
        "main"
      ]
    }
  ]
}
